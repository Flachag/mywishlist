<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image" href="{{ base_path }}/assets/img/w.png">
    <link rel="stylesheet" type="text/css" href="{{ base_path }}/assets/css/bootstrap.css">
    {% block stylesheets %}

    {% endblock %}

    <title>{% block title %}WishList{% endblock %}</title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ path_for('home') }}"><i class="fas fa-home"></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link {{ current_page == 'voir_listes' ? 'active': '' }}" href="{{ path_for('listes') }}">
                    Voir les listes
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link {{ current_page == 'creer_liste' ? 'active': '' }}" href="{{ path_for('listeManage') }}" >
                    Cr√©er une liste
                </a>
            </li>
        </ul>
    </div>
</nav>
<div class="container">
    {% block content %}{% endblock %}
</div>
</body>
<script type="text/javascript" src="{{ base_path }}/assets/js/jquery.js"></script>
<script type="text/javascript" src="{{ base_path }}/assets/js/bootstrap.js"></script>
<script type="text/javascript" src="{{ base_path }}/assets/js/all.min.js"></script>
<script type="text/javascript" src="{{ base_path }}/assets/js/copyClipb oard.js"></script>
{% block scripts %}{% endblock %}
</html>