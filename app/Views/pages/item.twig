{% extends "layout.twig" %}
{% block title %}
    {{ item.nom }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ base_path }}/assets/css/font_awesome.css"/>
    <link rel="stylesheet" type="text/css" href="{{ base_path }}/assets/css/app.css">
{% endblock %}

{% block content %}
    <section class="jumbotron text-center mt-4">
        <div class="container">
            {% if  token != "" %}
                <i class="fas fa-wrench"
                   onclick="document.location = '{{ path_for('listeManage') }}?token={{ liste.token }}';"></i>
                <br>
            {% endif %}
            <i class="fas fa-share-alt" id="copie" onclick="copy()"></i>
            <h1 class="jumbotron-heading">{{ liste.titre }}</h1>
            <p class="lead text-muted">{{ liste.description }}</p>
            <p class="lead text-muted">{{ liste.expiration|date("d/m/Y") }}</p>
        </div>
    </section>

    <div class="container mt-4">
        <img class="rounded float-left img-thumbnail" width=40% src="{{ item.img }}">
        <div class="text-center">
            {% if  token != "" %}
                {% if  item.reservation <= 0 %}
                    <i style="float: right;" class="fas fa-wrench"
                       onclick="document.location = '{{ path_for('itemManage') }}?item={{ item.id }}';"></i>
                    <br>
                    <i style="float: right;" class="fas fa-trash-alt"
                       onclick="document.location = '{{ path_for('itemDelete') }}?item={{ item.id }}';"></i>
                {% endif %}
            {% endif %}
            <h5 class="text-uppercase font-weight-bold m-auto text-center"><strong>{{ item.nom }}</strong></h5>
            <p>{{ item.descr }}</p>
            <p><strong>{{ item.tarif }} euros </strong></p>
            {% if item.reservation != 0 %}
                <div class="alert alert-danger">
                    Cet objet est déjà réservé
                </div>
            {% else %}
                <button href="" class="btn btn-dark">Je réserve !</button>
            {% endif %}
        </div>
    </div>
{% endblock %}