{% extends "layout.twig" %}
{% block title %}
    {{ item.nom }}
{% endblock %}

{% block content %}
    <section class="jumbotron text-center mt-4">
        <div class="container">
            <i style="display: block;}" class="fas fa-wrench" onclick="document.location = '{{ path_for('listeEditor') }}?token={{ liste.token }}';"></i>
            <h1 class="jumbotron-heading">{{ liste.titre }}</h1>
            <p class="lead text-muted">{{ liste.description }}</p>
            <p class="lead text-muted">{{ liste.expiration|date("d/m/Y") }}</p>
        </div>
    </section>

    <div class="d-flex justify-content-around">
        <img class="rounded float-left img-thumbnail" style="width: 18rem" src="assets/img/{{ item.img }}">
        <div class="text-center">
            <h5 class="text-uppercase font-weight-bold m-auto text-center"><strong>{{ item.nom }}</strong></h5>
            <p>{{ item.descr }}</p>
            <p><strong>{{ item.tarif }} euros </strong></p>
            {% if item.reservation != 0 %}
                <div class="alert alert-danger">
                    Cet objet est déjà réservé
                </div>
            {% else %}
                <button class="btn btn-dark">Je réserve !</button>
            {% endif %}
        </div>

    </div>
{% endblock %}