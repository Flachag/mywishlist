{% extends "layout.twig" %}
{% block title 'Creation item' %}

{% block content %}
    <div class="body m-5">
        <form action="" method="post">
            <h4>Nom</h4>
            <input class="form-control" type="text" name="nom" required>
            <br>
            <h4>Description</h4>
            <textarea cols="111" name="description" id="description" rows="10" required></textarea>
            <br>
            <br>
            <div style="display: inline" class="form-group row">
                <div style="float: left;" class="col-xs-2">
                    <h4>Prix</h4>
                    <input class="form-control" type="number" name="tarif" required>
                </div>

                <div style="float: left; margin-left: 10em;" class="col-xs-4">
                    <h4>Image</h4>
                    <input class="form-control" type="text" name="img">
                </div>

                <div style="float: right;" class="col-xs-4">
                    <h4>Lien externe</h4>
                    <input class="form-control" type="url" name="url">
                </div>
            </div>
            <br>
            <br>
            <br>
            <br>
            <button type="Submit" class="btn btn-dark"
                    onclick="document.location = '{{ path_for('itemSend') }}';">Cr√©er item
            </button>
        </form>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="assets/ckeditor/ckeditor.js"></script>
{% endblock %}