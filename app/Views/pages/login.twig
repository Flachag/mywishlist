{% extends "layout.twig" %}
{% block title 'Connexion' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ base_path }}/public/css/app.css">
{% endblock %}

{% block content %}
    {% if flash.error is defined %}
        {% for error in flash.error %}
            <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                <strong>Mince!</strong> {{ error | raw }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endif %}
    {% if flash.success is defined %}
        {% for success in flash.success %}
            <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
                <strong>Super!</strong> {{ success | raw }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endif %}
    <div class="card mt-3 ml-auto mr-auto" style="max-width: 32rem; min-width: 25rem;">
        <div class="card-header text-white bg-dark">
            Se connecter
        </div>
        <div class="card-body">
            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
            <form id="loginform" class="form-horizontal" role="form" method="post" action="{{ path_for("sendLogin") }}" >
                <div class="mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" id="login-username" name="username" placeholder="Pseudo ou email" required>
                        <div class="invalid-feedback" style="width: 100%;">
                            Identifiant requis.
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" id="login-password" name="password" placeholder="Mot de Passe" required>
                        <div class="invalid-feedback" style="width: 100%;">
                            Mot de Passe requis.
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 control">
                        <button class="btn btn-success btn-block" type="submit">Se connecter</button>
                        <div style="font-size:85%">
                            Vous n'avez pas encore de compte?
                            <a href="{{ path_for("inscriptionPage") }}">
                                Cr√©er un compte
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>


{% endblock %}
