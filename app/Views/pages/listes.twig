{% extends "layout.twig"%}
{% block title 'Liste' %}

{% block content %}
    <div class="body m-5">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Num√©ro</th>
                <th scope="col">User_id</th>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Expiration</th>
                <th scope="col">Token</th>
            </tr>
            </thead>
            <tbody>
            {% for liste in listes %}
                <tr onclick="document.location = '{{ path_for('items') }}?liste={{ liste.token }}';">
                    <th scope="row">{{ liste.no }}</th>
                    <td>{{ liste.user_id }}</td>
                    <td>{{ liste.titre }}</td>
                    <td>{{ liste.description }}</td>
                    <td>{{ liste.expiration }}</td>
                    <td>{{ liste.token }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}