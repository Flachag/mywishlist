{% extends "layout.twig" %}
{% block title 'Creer liste' %}

{% block content %}
    <div class="body m-5">
        <form action="{{ path_for('formListe') }}" method="post">
            <div class="form-group">
                <label for="title">Titre</label>
                <input class="form-control" type="text" name="titre" value="" id="title" required>
            </div>
            <div class="form-group">
                <label for="descr">Description</label>
                <textarea class="form-control" name="description" id="description" rows="10" id="descr"></textarea>
            </div>
            <div class="form-group">
                <label for="expiration">Expiration</label>
                <input class="form-control" type="date" id="expiration" name="expiration" value="" required>
            </div>
            <div class="form-group">
                <div class="custom-checkbox custom-control">
                    <input type="checkbox" name="public" id="public" class="custom-control-input">
                    <label for="public" class="custom-control-label">Rendre la liste publique</label>
                </div>
            </div>
            <button type="Submit" class="btn btn-dark">Cr√©er</button>
        </form>
    </div>
{% endblock %}
